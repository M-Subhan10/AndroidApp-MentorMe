<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lets Find..."
            android:textColor="#1C5E7C"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:layout_marginBottom="12dp" />

        <!-- Search View -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/search_bg"
            android:queryHint="Search here"
            android:iconifiedByDefault="false"
            android:layout_marginBottom="24dp" />

        <!-- Recent Searches -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Searches"
            android:textColor="#1C5E7C"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <!-- Recent Item 1 -->
        <LinearLayout
            android:id="@+id/recent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mentor 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cross1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cross_img" />
        </LinearLayout>

        <!-- Recent Item 2 -->
        <LinearLayout
            android:id="@+id/recent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mentor 2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cross2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cross_img" />
        </LinearLayout>

        <!-- Recent Item 3 -->
        <LinearLayout
            android:id="@+id/recent3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mentor 3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cross3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/cross_img" />
        </LinearLayout>

        <!-- Browse Categories -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse Categories"
            android:textColor="#1C5E7C"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_marginBottom="12dp" />

        <!-- Category 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Entrepreneurship"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_arrow_outward_24" />
        </LinearLayout>

        <!-- Category 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Personal Growth"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_arrow_outward_24" />
        </LinearLayout>

        <!-- Category 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Education"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_arrow_outward_24" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
